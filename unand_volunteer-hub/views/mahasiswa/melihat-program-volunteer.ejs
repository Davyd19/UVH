<div class="card-container max-w-5xl mx-auto">
    <h2>Program Volunteer Tersedia</h2>
    <div class="space-y-4">
        <% if (programs && programs.length > 0) { %>
            <% programs.forEach(program => { %>
                <div class="program-card p-5 border rounded-lg hover:shadow-md transition-shadow">
                    <h3 class="program-title text-xl font-bold text-dark-teal"><%= program.title %></h3>
                    <p class="program-meta text-xs text-gray-500 mb-2">
                        <i class="fas fa-map-marker-alt"></i> <%= program.location %> | <i class="fas fa-users"></i> Kuota: <%= program.quota %>
                    </p>
                    <p class="program-description text-sm mb-4"><%= program.description %></p>
                    <div class="flex justify-end">
                        <a href="/programs/<%= program.id %>" class="primary-button text-sm">Lihat Detail & Daftar</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center text-gray-500 py-8">Saat ini belum ada program yang tersedia.</p>
        <% } %>
    </div>
</div>